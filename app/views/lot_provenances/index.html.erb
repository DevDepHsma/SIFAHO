<% render 'lots/header' %>
<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    <h5 class="card-title d-flex mb-0">
      <%= fa_icon "tags" %>&nbsp;
      Procedencias
    </h5>
    <% if policy(LotProvenance).new? %>
      <%= link_to new_lot_provenance_path(), class: 'btn btn-primary btn-sm btn-create', remote: true do %>
        <%= fa_icon 'plus' %>
      <% end %> 
    <% end %> 
  </div>
  <div class="card-body" id='lots_provenance'>
    <%= render(
      partial: 'lot_provenances/list',
      locals: { lot_provenances: @lot_provenances }
    ) %>
  </div>
</div>

