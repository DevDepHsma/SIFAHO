<%= render 'shared/flash_message' %>

<% if @inpatient_prescription_product.parent.present? %>
  $('#child-<%= @inpatient_prescription_product.product.id %>').fadeOut(500, function(e){
    const target = $('#child-<%= @inpatient_prescription_product.product.id %>');
    $(target).remove();
  });
<% else %>
  $('#parent-<%= @inpatient_prescription_product.product.id %>').fadeOut(500, function(e){
    const target = $('#parent-<%= @inpatient_prescription_product.product.id %>');
    $(target).remove();
  });
<% end %>