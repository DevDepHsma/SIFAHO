// Style modal
$('#dialog .modal-header').addClass('bg-danger text-white');

// Add the dialog title
$('#dialog .modal-title').html("<i class=' glyphicon glyphicon-trash'></i>  Eliminar la plantilla <%= @internal_order_template.name %>");

// Render the edit form
$('#dialog .modal-body').html(
  'Desea eliminar esta plantilla de <%= @internal_order_template.products.count %> productos?');

// Add form button
$('#dialog .modal-footer').html(
  "<button type='button' class='btn btn-default pull-left' data-dismiss='modal'>Volver</button>"+
  "<a data-remote='true' data-method='delete' href='/internal_order_templates/<%= @internal_order_template.id %>' data-dismiss='modal' class='btn commit btn-danger pull-right' rel='nofollow'>Confirmar</a>"
);

// Show the dynamic dialog
$('#dialog').modal("show");

// Remove style
$('#dialog').on('hidden.bs.modal', function () {
  $('#dialog .modal-header').removeClass('bg-danger text-white');
});
