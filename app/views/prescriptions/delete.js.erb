// Style modal
$('#dialog .modal-header').addClass('bg-danger text-white');

// Add the dialog title
$('#dialog .modal-title').html("<i class='fa fa-trash'></i>  Enviar a papelera");

// Render the edit form
$('#dialog .modal-body').html('Esta seguro que desea enviar a la papelera la prescripci√≥n de <%= @prescription.professional.full_name %>?');

// Add form button
$('#dialog .modal-footer').html(
  "<button type='button' class='btn btn-default pull-left' data-dismiss='modal'>Volver</button>"+
  "<a data-remote='true' data-method='delete' href='/prescriptions/<%= @prescription.id %>>' data-dismiss='modal' class='btn commit btn-danger pull-right' rel='nofollow'>Confirmar</a>"
);

// Show the dynamic dialog
$('#dialog').modal("show");

// Remove style
$('#dialog').on('hidden.bs.modal', function () {
  $('#dialog .modal-header').removeClass('bg-danger text-white');
});
