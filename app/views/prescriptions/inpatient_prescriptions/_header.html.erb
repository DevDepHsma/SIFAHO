      <% end %>
    </li>
  <% end %>
  <% if policy(Bed).new? %>
    <li class="nav-item">
      <%= link_to new_bed_path, class: "nav-link #{ active_action_and_controller('new', 'beds') }" do %>
        <%= fa_icon "plus" %>
        Agregar cama
      <% end %>
    </li>
  <% end %>
  <% if policy(Bedroom).new? %>
    <li class="nav-item">
      <%= link_to new_bedroom_path, class: "nav-link #{ active_action_and_controller('new', 'bedrooms') }" do %>
        <%= fa_icon "plus" %>
        Agregar habitación
      <% end %>
    </li>
  <% end %>
