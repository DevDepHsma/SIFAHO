      <%= fa_icon "procedures" %>
      Internación
    <% end %>
  </li>
  <% if policy(InpatientPrescription).new? %>
    <li class="nav-item non-sel">
      <%= link_to new_inpatient_prescription_path, class: "nav-link #{ active_action_and_controller('new', 'inpatient_prescriptions') }" do %>
        <%= fa_icon "plus" %>
