      <% end %>
    </li>
  <% end %>
  <% if policy(Bed).index? %>
    <li class="nav-item">
      <%= link_to beds_path, class: "nav-link #{ active_action_and_controller('index', 'beds') }" do %>
        <%= fa_icon "map" %>
