<tr id="prescription_<%= prescription.id %>">
  <td><%= prescription.remit_code %></th>
  <td class="pres-col-pro"><%= prescription.professional.full_name %></td>
  <td class="pres-col-pat"><%= prescription.patient.full_info %></td>
  <td>
    <span class="badge badge-<%= prescription_status_label(prescription) %>">
      <%= prescription.status.underscore.humanize %>
    </span>
  </td>
  <td>
    <%= prescription.original_prescription_products.count %>
  </td>
  <td>
    <%= prescription.movements.count %>
  </td>
  <td>
    <% if prescription.date_prescribed.present? %>
      <%= prescription.date_prescribed.strftime("%d/%m/%Y") %>
    <% else %>
      ------
    <% end %>
  <td class="text-left actions-col">
    <div class="d-flex">
      

      <%= render(
        partial: 'shared/action_buttons',
        locals:{ 
            object: prescription, 
            show: {visible: true, target: :_blank},
            edit: {visible: true},
            destroy: {
              visible: true, 
              title: "Eliminar prescripción",
              body: "Esta seguro que desea eliminar la prescripción de #{ prescription.professional.full_name }?",
              path: prescription.class_name == 'ChronicPrescription' ? "/recetas_cronicas/#{prescription.id}" : "/recetas_ambulatorias/#{prescription.id}"
            }
            
        }
      ) 
      %>
     
    </div>
  </td>
</tr>
