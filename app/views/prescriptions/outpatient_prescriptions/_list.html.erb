<div class="card fixed-panel-list">
  <table class="table table-hover table-striped table-sm">
    <thead >
      <tr>
        <th>Código</th>
        <th>
          <%= sort_label name: 'Médico', form: 'outpatient-prescriptions-filter', field: 'pr_fullname', icon_type: 'alpha' %>
        </th>
        <th>
          <%= sort_label name: 'Paciente', form: 'outpatient-prescriptions-filter', field: 'pa_last_name', icon_type: 'alpha' %>
        </th>
        <th>Estado</th>
        <th>Productos</th>
        <th>
          <%= sort_label name: 'Recetada', form: 'outpatient-prescriptions-filter', field: 'date_prescribed' %>
        </th>
        <th class="text-center">Acciones</th>
      </tr>
    </thead>
    <tbody id="outpatient_prescriptions">
      <%= render @outpatient_prescriptions %>
    </tbody>
  </table>
</div>
<div class="row d-flex align-items-center" style="height: 50px">
  <div class="col-6">
    <div class="d-flex align-items-center w-100">
      <%= js_will_paginate @outpatient_prescriptions, list_classes: %w(pagination mb-0),
        previous_label: '<i class="fa fa-angle-left"></i>',
        next_label: '<i class="fa fa-angle-right"></i>'
      %>
      <div class="ml-3">
        <span>Por página:</span>
        <select class="custom-select w-auto ml-2" onChange="page_size_selection(event, 'outpatient-prescriptions-filter')">
          <% per_page_options.each do |option| %>
            <option value='<%=option%>' <%= 'selected' if params[:per_page].to_i == option %>><%=option%></option>
          <% end %>
        </select>
      </div>
    </div>
  </div>
  <div class="col-3  d-flex justify-content-around align-items-center">
    <div>
      Recetas <span class="badge badge-secondary"><%= @total %></span>
    </div>
    <div>
      Pendientes <span class="badge badge-secondary"><%= @total_pending %></span>
    </div>
  </div>
</div>
