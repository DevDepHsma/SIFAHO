<%= render 'header' %>

<p id="notice"><%= notice %></p>

<h1>Inpatient Prescriptions</h1>

<table>
  <thead>
    <tr>
      <th>Patient</th>
      <th>Professional</th>
      <th>Bed</th>
      <th>Remit code</th>
      <th>Observation</th>
      <th>Status</th>
      <th>Date prescribed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inpatient_prescriptions.each do |inpatient_prescription| %>
      <tr>
        <td><%= inpatient_prescription.patient %></td>
        <td><%= inpatient_prescription.professional %></td>
        <td><%= inpatient_prescription.bed %></td>
        <td><%= inpatient_prescription.remit_code %></td>
        <td><%= inpatient_prescription.observation %></td>
        <td><%= inpatient_prescription.status %></td>
        <td><%= inpatient_prescription.date_prescribed %></td>
        <td><%= link_to 'Show', inpatient_prescription %></td>
        <td><%= link_to 'Edit', edit_inpatient_prescription_path(inpatient_prescription) %></td>
        <td><%= link_to 'Destroy', inpatient_prescription, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Inpatient Prescription', new_inpatient_prescription_path %>
