<div class="card mx-auto">

  <table class="table table-hover table-sm mb-0">
    <thead>
      <tr>
        <th>Producto</th>
        <th>Dosis total</th>
        <!--th>A entregar</th-->
        <th>Agregar</th>
      </tr>
    </thead>
    <tbody>
      <%= inpatient_form.simple_fields_for :original_order_products do |form_products| %>
        <%= render "inpatient_prescriptions/partials/delivery_fields", order: inpatient_form.object, f: form_products %>
      <% end %>
    </tbody>
    
  </table>

  <%# Si no se asigno algun producto, entonces debemos mostrar mensaje "presence" %>
  <% if inpatient_form.object.errors[:presence_of_products_into_the_order].any? %>
    <div class="invalid-feedback d-block">
      <%= inpatient_form.object.errors[:presence_of_products_into_the_order].first %>
    </div>
  <% end %>
  
</div>