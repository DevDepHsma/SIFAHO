<% selected_product_partial = escape_javascript(
  render(partial: 'reports/partials/selected_product', locals: { product: @product })
) %>

$("input[name='report[products_ids]']").val("<%= @products_ids %>");
$("#selected-products").append("<%= selected_product_partial %>");

<% stock_products = escape_javascript(
  render(partial: 'reports/partials/stock_products')
) %>

$("#products-list").html("<%= stock_products %>");

$("#loader-container").css({'display': 'none'});