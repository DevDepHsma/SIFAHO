<% @products.each do |product| %>
  <li>
    <button type="button" 
            onclick="toggleSelectItem(event, 'product');"
            data-url="<%= select_product_reports_path(product.id) %>"
            id="sp-<%=product.id%>">
      <%= highlight("#{product.code} | #{product.name}", params[:term], ignore_special_chars: true) %>
    </button>
  </li>
<%end%>
