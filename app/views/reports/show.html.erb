<%= render 'reports/partials/header' %>
<div class="card fixed-custom-card">
  <div class="card-header d-flex align-items-center justify-content-between">
    <div class="d-flex align-items-center">
      <%= fa_icon "eye" %>
      <h5 class="card-title mb-0 ml-2">
        Report
      </h5>
    </div>
  </div>
  <div class="card-body">
    <div>
      <%= @report.sector_name %>
      <%= @report.establishment_name %>
    </div>
    <div>
    <table class="table table-hover table-striped table-condensed">
      <thead>
        <tr>
          <th>CÃ³digo producto</th>
          <th>Producto</th>
          <th>Cantidad</th>
          <th>Apellido y Nombre</th>
          <th>Dni</th>
          <th >Edad</th>
        </tr>
      </thead>
      <tbody id=reports>
        <% @report.report_patients.each do |rp| %>
          <tr>
            <td><%= rp.product_code %></td>
            <td><%= rp.product_name %></td>
            <td><%= rp.product_quantity %></td>
            <td><%= rp.patient_full_name %></td>
            <td><%= rp.patient_dni %></td>
            <td><%= rp.patient_age %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
        
    </div>
  </div>
  <div class="card-footer d-flex justify-content-end">
    <%= link_to 'Volver', sectors_path, class: 'btn btn-light mr-2' %>
  </div>
</div>
