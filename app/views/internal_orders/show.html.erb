<%= render 'header' %>

<div class="card fixed-custom-card">
  <div class="card-header d-flex align-items-center justify-content-between">
    <div class="d-flex align-items-center">
      <%= fa_icon "eye" %>
      <h5 class="card-title mb-0 ml-2">
        Viendo <%= @internal_order.order_type %>
      </h5>
    </div>
    <div>
      <%= link_to internal_order_path(format: 'pdf'), class: 'btn',  
        :title => 'Imprimir pdf', :'data-placement'=>'top', :'data-toggle'=>'tooltip', target: :_blank do %>
        <%= fa_icon "print" %>
      <% end %>
      <%= link_to internal_orders_path, class: 'btn',
          :title => 'Cerrar', :'data-placement'=>'top', :'data-toggle'=>'tooltip' do %>
        <%= fa_icon "times" %>
      <% end %>
    </div>
  </div>

  <div class="card-body">
    <div class="row">
      <div class='col-2'>
        <strong>Sector solicitante:</strong>
        <%= @internal_order.applicant_sector.name%>
      </div>
      <div class="col-2">
        <strong>Sector proveedor:</strong>
        <%= @internal_order.provider_sector.name%>
      </div>
      <div class='col-3'>
        <strong>Solicitado:</strong>
        <%= @internal_order.requested_date.strftime("%d/%m/%Y")%>
      </div>
      <div class='col-3'>
        <strong>Observaciones:</strong>
          <%= @internal_order.observation? ? @internal_order.observation : 'Sin observaciones' %>
      </div>
      <div class='col-2'>
        <strong>Código:</strong>
        <%= @internal_order.remit_code %>
      </div>
    </div>
    
    <!-- Status bar -->
    <hr>
    <div class="row">
      <div class="col-12">
        <%= render 'status_bar', internal_order: @internal_order %>
      </div>
    </div>

    <!-- Tabs -->
    <div class="row mt-3">
      <div class="col-12">
        <ul class='nav nav-tabs nav-justified'>
          <li class='nav-item'>
            <a class="nav-link active" data-toggle='tab' href='#supplies' role="tab">
              <%= fa_icon "cubes" %> Productos
              <span class="badge badge-secondary"><%= @internal_order.internal_order_products.count %></span>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" data-toggle='tab' href='#last-movements' role="tab">
              <%= fa_icon "exchange-alt" %> Movimientos
              <span class="badge badge-secondary"><%= @internal_order.movements.count %></span>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" data-toggle='tab' href='#comments' role="tab">
              <%= fa_icon "exchange-alt" %> Comentarios
              <span class="badge badge-secondary" id="comments-count"><%= @internal_order.comments.count %></span>
            </a>
          </li>
        </ul>
      </div>
    </div>
    <div class="tab-content">
      <div id='supplies' class='tab-pane fade show active'>
        <!-- Insumos a dispensar -->
        <div class="card">
          <table class="table table-hover table-sm">
            <thead>
              <tr>
                <th>Código</th>
                <th>Producto</th>
                <th>Unidad</th>
                <th>Solicitado</th>
                <th><%= @internal_order.provision_entregada? ? 'Entregado' : 'A entregar' %></th>
                <th>Lotes</th>
                <th>Observaciones</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @internal_order.internal_order_products.joins(:product).order("name").each do |int_ord_prod| %>
                <tr>
                  <td>
                    <%= int_ord_prod.product_id %>
                  </td>
                  <td>
                    <%= int_ord_prod.product_name %>
                  </td>
                  <td>
                    <%= int_ord_prod.unity %>
                  </td>
                  <td>
                    <%= int_ord_prod.request_quantity %> 
                  </td>
                  <td>
                    <%= int_ord_prod.delivery_quantity %>
                  </td>
                  <td>
                    <button class="btn btn-primary btn-sm" type="button" data-toggle="collapse" data-target="#collapse-row-<%= int_ord_prod.id %>" aria-expanded="false" aria-controls="collapse-row-<%= int_ord_prod.id %>">
                      <%= int_ord_prod.int_ord_prod_lot_stocks.count %>
                    </button>
                  </td>
                  <td>
                    <% if int_ord_prod.provider_observation.present? || int_ord_prod.applicant_observation.present? %>
                      <%= fa_icon "asterisk" %>
                    <% else %>
                      ---
                    <% end %>
                  </td>
                </tr>
                <tr>
                 <% if int_ord_prod.int_ord_prod_lot_stocks.present? %>
                  
                  <td colspan="7" class="p-0">
                    <div id="collapse-row-<%= int_ord_prod.id %>" class="collapse in">
                      <div class="p-3">
                        <table class="w-100">
                          <thead>
                            <tr>
                              <th> Cantidad </th>
                              <th> Lote </th>
                              <th> Laboratorio </th>
                              <th> Vencimiento </th>
                            </tr>
                          </thead>
                          </tbody>
                            <% int_ord_prod.int_ord_prod_lot_stocks.each do |iopls| %>
                            <tr>

                              <td>
                                <%= iopls.quantity %>
                              </td>
                              
                              <td>
                                <%= iopls.lot_stock.lot.code %>
                              </td>
                              
                              <td>
                                <%= iopls.lot_stock.lot.laboratory.name %>
                              </td>
                              
                              <td>
                                <%= iopls.lot_stock.lot.expiry_date.present? ? iopls.lot_stock.lot.expiry_date.strftime("%m/%y") : "Sin asignar" %>
                              </td>
                            </tr>

                            <% end %>
                          </tbody>
                        </table>
                        <% if int_ord_prod.provider_observation.present? || int_ord_prod.applicant_observation.present? %>
                          <table class="w-100">
                            <tr>
                              <th>Descripción solicitud</th>
                              <th>Descripción proveedor</th>
                            </tr>
                            <tr>
                              <td><%= int_ord_prod.provider_observation %></td>
                              <td><%= int_ord_prod.applicant_observation %></td>
                            </tr>
                          </table>
                        <%end%>
                      </div>
                    </div>
                  </td>

                  <% else %>
                  
                  sin lote
                  <% end %>
                  </tr>
              <% end %>

            </tbody>
          </table>
        </div>
      </div>
      <div id='last-movements' class='tab-pane fade'>
        <!-- Tabla de movimientos -->
        <%= render '/shared/movements_table', order: @internal_order %>
      </div> <!-- End last movements tab pane -->
      <div id='comments' class='tab-pane fade'>
        <!-- Tabla de movimientos -->
        <%= render '/shared/comments', order: @internal_order, new_comment: InternalOrderComment.new %>
      </div> <!-- End comments tab pane -->
    </div> <!-- End Tab content-->
  </div>
  <div class="card-footer text-right">
    <% if @internal_order.provision? %>
      <%= link_to provider_index_internal_orders_path, class: "btn btn-light mr-1" do %>Volver<% end %>
    <% else %>
      <%= link_to applicant_index_internal_orders_path, class: "btn btn-light mr-1" do %>Volver<% end %>
    <% end %> 
    <% if policy(@internal_order).edit_provider? %>
      <%= link_to edit_provider_internal_order_path(@internal_order), :"data-turbolinks" => false,
        class: "btn btn-warning mr-1" do %>
        <%= fa_icon "pen" %>
        Editar
      <% end %>
    <% end %>   
    <% if policy(@internal_order).edit_applicant? %>
      <%= link_to edit_applicant_internal_order_path(@internal_order), 
        class: 'btn btn-warning btn-md mr-1' do %>
        <%= fa_icon "pen" %>
        Editar
      <% end %>
    <% end %>
    <% if policy(@internal_order).send_applicant? %>
      <%= link_to send_applicant_internal_order_path(@internal_order), 
        class: 'btn btn-primary btn-md mr-1' do %>
        <%= fa_icon "paper-plane" %>
        Enviar
      <% end %>
    <% end %>
    <% if policy(@internal_order).return_provider_status? || policy(@internal_order).return_applicant_status? %>
      <a href="#return-confirm" data-id="<%= @internal_order.id %>" class="return-confirm btn btn-warning mr-1">
        <%= fa_icon "redo" %>
        Retornar
      </a>
    <% end %>
    <% if policy(@internal_order).send_provider? %>
      <%= link_to send_provider_internal_order_path(@internal_order), remote: true,
        class: 'btn btn-primary btn-md' do %>
        <%= fa_icon "paper-plane" %>
        Enviar
      <% end %>
    <% end %>
    <% if policy(@internal_order).receive_applicant? %>
      <%= link_to receive_applicant_confirm_internal_order_path(@internal_order), remote: true,
        class: 'btn btn-success btn-md' do %>
        <%= fa_icon "check" %>
        Recibir
      <% end %>
    <% end %>
  </div>
</div>

<% if policy(@internal_order).return_provider_status? || policy(@internal_order).return_applicant_status? %>
  <div class="modal" id="return-confirm">
    <div class="modal-dialog">
      <div class="modal-content panel-warning">
        <div class="modal-header panel-heading">
          <a class="close" data-dismiss="modal">×</a>
          <h3><%= fa_icon "redo" %> Retornar a <%= prev_status = InternalOrder.statuses.key(@internal_order.status_before_type_cast - 1).underscore.humanize %></h3>
        </div>
        <div class="modal-body">
          <p>Seguro que desea retornar la <%= @internal_order.order_type %> actual a <%= prev_status %>?</p>
        </div>
        <div class="modal-footer text-right">
          <a href="#" data-dismiss="modal" class="btn">Cancelar</a>
          <% if policy(@internal_order).return_applicant_status? %>
            <%= link_to 'Confirmar', return_applicant_status_internal_order_path, method: :get, :class => 'btn btn-warning' %>
          <% else %>
            <%= link_to 'Confirmar', return_provider_status_internal_order_path, method: :get, :class => 'btn btn-warning' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
