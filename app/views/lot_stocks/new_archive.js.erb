// Style modal
$('#dialog .modal-header').addClass('bg-warning text-black');

// Add the dialog title
$('#dialog .modal-title').html("<i class='fas fa-archive'></i>  Archivando lote <%= @lot_stock.lot_code %>");

// Render the new form
$('#dialog .modal-body').html('<%= j render("archived_form") %>');

// Add form button
$('#dialog .modal-footer').html(
  "<button type='button' class='btn' data-dismiss='modal'>Volver</button>"+
  "<button type='submit' class='btn btn-warning pull-right' form='new_lot_archive'><i class='fas fa-archive'></i> Archivar</button>"
);

// Show the dynamic dialog
$('#dialog').modal("show");


