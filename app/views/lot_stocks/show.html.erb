<%#= render 'header' %>

<div class="card fixed-custom-card">
  <div class="card-header d-flex justify-content-between">
    <div class="d-flex align-items-center"> 
      <%= fa_icon 'eye' %>
      <h5 class="card-title mb-0 ml-2">
        Viendo lote <%= @lot_stock.lot.code %>
      </h5>
    </div>
    <%= link_to lot_stocks_path(id: @lot_stock.stock.id), class: 'btn btn-light',
      :title => 'Cerrar', :'data-placement'=>'top', :'data-toggle'=>'tooltip' do %>
      <%= fa_icon 'times' %>
    <% end %>
  </div>
  <div class="card-body">
    <div class="d-flex justify-content-start">
      <div class="p-1 flex-fill">
        <h5>Código </h5><%= @lot_stock.lot.code %>
      </div>
      <div class="p-1 flex-fill">
        <h5>Laboratorio </h5><%= @lot_stock.lot.laboratory.name %>
      </div>
      <div class="p-1 flex-fill">
        <h5>Fecha expiración </h5><%= @lot_stock.lot.expiry_date.present? ? @lot_stock.lot.expiry_date.strftime("%d/%m/%Y") : '---' %>
      </div>
      <div class="p-1 flex-fill">
        <h5>Cantidad </h5><%= @lot_stock.quantity %>
      </div>
      <div class="p-1 flex-fill">
        <h5>Cantidad Archivada </h5><%= @lot_stock.archived_quantity %>
      </div>
      
    </div>

    <ul class="nav nav-tabs nav-justified mt-4" id="myStockTab" role="tablist">
      <li class="nav-item" role="presentation">
        <a class="nav-link active" id="lots-archive-tab" data-toggle="tab" href="#lot-archives" role="tab" aria-controls="lots-archive" aria-selected="true">
          <%= fa_icon "barcode" %> Lotes archivados 
          <span class="badge badge-secondary">
            <%= @lot_stock.archived_quantity %>
          </span>
        </a>
      </li>
      <li class="nav-item" role="presentation">
        <a class="nav-link" id="movements-tab" data-toggle="tab" href="#movements" role="tab" aria-controls="movements" aria-selected="false">
          <%= fa_icon "exchange-alt" %> Últimos movimientos
          <span class="badge badge-secondary">
            <%= @lot_stock.movements.count %>
          </span>
        </a>
      </li>
    </ul>
    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade show active" id="lot-archives" role="tabpanel" aria-labelledby="lots-tab">
        <table class="table table-hover table-sm">
          <thead class="thead-light">
            <tr>
              <th scope="col">Usuario</th>
              <th scope="col">Estado</th>
              <th scope="col">Cantidad</th>
              <th scope="col">Observaciones</th>
              <th scope="col" class="actions-col">Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% @lot_stock.lot_archives.order(quantity: :desc).each do |lot_archive| %>
              <tr>
                <th scope="row"><%= lot_archive.user.full_name.humanize %></th>
                <td><%= lot_archive.status.humanize %></td>
                <td><%= lot_archive.quantity %></td>
                <td><%= lot_archive.observation %></td>
                <td class="actions-col">
                  <%= link_to return_archive_modal_lot_stocks_path(@lot_stock.stock, @lot_stock), class: "btn btn-warning btn-sm", remote: true, 
                    title: 'Retornar', tabindex: "-1", data: { toggle: 'tooltip', placement: 'top' } do %>
                    <%= fa_icon 'undo' %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="tab-pane fade" id="movements" role="tabpanel" aria-labelledby="movements-tab">
        <table class="table table-hover table-sm">
          <thead class="thead-light">
            <tr>
              <th scope="col">Fecha</th>
              <th scope="col">Movimiento</th>
              <th scope="col">Origen</th>
              <th scope="col">Destino</th>
              <th scope="col">Estado</th>
              <th scope="col">Cantidad</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            <% @lot_stock.movements.sort_by{|e| e[:created_at]}.last(10).reverse.each do |movement| %>
              <tr>
                <td><%= movement.created_at.strftime("%d/%m/%Y") %></td>
                <td><%= movement.order.class.model_name.human %></td>
                <td class="text-truncate" style="max-width: 150px;"><%= movement.order_origin_name %></td>
                <td class="text-truncate" style="max-width: 150px;"><%= movement.order_destiny_name %></td>
                <td><%= movement.order_status.humanize %></td>
                <td class="text-<%= movement.adds? ? 'success' : 'danger' %>"><%= movement.quantity %></td>
                <td><%= link_to polymorphic_path(movement.order, resaltar: @lot_stock.stock.product_id), target: :_blank, class: "btn btn-sm btn-light" do %><%= fa_icon 'external-link-alt' %><% end %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        
      </div>
    </div>
  </div>

  <!-- Botones de acción footer -->
  <div class="card-footer d-flex justify-content-end">
    <%= link_to 'Volver', lot_stocks_path(id: @lot_stock.stock.id), class: "btn" %>
  </div>
</div>