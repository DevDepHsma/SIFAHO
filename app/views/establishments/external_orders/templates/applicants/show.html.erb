<%= render 'establishments/external_orders/header' %>

<div class="card fixed-custom-card">
  <div class="card-header d-flex align-items-center justify-content-between">
    <div class="d-flex align-items-center ml-2">
      <%= fa_icon "eye" %>
      <h5 class="card-title mb-0 ml-2">
        Viendo plantilla de <%= @external_order_template.order_type %>
      </h5>
    </div>
    <%= link_to external_orders_templates_path, class: 'btn btn-light',
      :title => 'Cerrar', :'data-placement'=>'top', :'data-toggle'=>'tooltip' do %>
      <%= fa_icon "times" %>
    <% end %>
  </div>
  <div class="card-body" id="panel-body-new">
    <div class="row">
      <div class="col-md-3">
        <h5>Nombre</h5>
        <%= @external_order_template.name %>
      </div>
      <div class="col-md-3">
        <% if @external_order_template.solicitud? %>
          <h5>Efector proveedor</h5>
        <% else %>
          <h5>Efector solicitante</h5>
        <% end %>
        <%= @external_order_template.destination_sector.sector_and_establishment %>
      </div>
      <% if @external_order_template.observation.present? %>
        <div class="col-md-3">
          <h5>Observaciones</h5>
          <%= @external_order_template.observation %>
        </div>
      <% end %>
      <div class="col-md-3">
        <h5>Creada por</h5>
        <% if @external_order_template.created_by.profile.present? %>
          <span><%= image_tag user_avatar(@external_order_template.created_by, 25), class:"img-circle img-profile-nav" %></span>
        <% end %>
        <%= @external_order_template.created_by.full_name %>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-12">
        <!-- Insumos a dispensar -->
        <div class="card">
          <table class="table table-hover table-sm mb-0">
            <thead>
              <tr>
                <th>CÃ³digo</th>
                <th>Producto</th>
                <th>Unidad</th>
              </tr>
            </thead>
            <tbody class="external_order_template_supplies">
              <% @external_order_template.external_order_product_templates.joins(:product).order("name").each do |iots| %>
                <tr>
                  <td><%= iots.product_code %></td>
                  <td><%= iots.product_name %></td>
                  <td><%= iots.unity.name %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class="card-footer d-flex align-item-center justify-content-between">
    <div>
      <% if policy(@external_order_template).destroy? %>
        <button type="button" 
          class="btn btn-danger btn-sm mr-1 ml-1 delete-item"
          title="<%= t("actions.tooltip.delete") %>"
          data-toggle="tooltip"
          data-placement="top"
          data-target="#delete-item" 
          data-title="Eliminar plantilla"
          data-body="Esta seguro que desea eliminar la plantilla <%= @external_order_template.name %>?"
          data-href="<%= external_orders_templates_applicant_url(@external_order_template) %>">
            <%= fa_icon "trash" %>
        </button>
      <% end %>
    </div>
    <div>
      <%= link_to 'Volver', external_orders_templates_path, class: "btn btn-light mr-2" %>
      <% if policy(@external_order_template).show? %>
        <%= link_to external_orders_templates_applicant_path(format: 'pdf'), class: 'btn btn-info mr-1', target: :_blank do %>
          <%= fa_icon "print" %> Imprimir
        <% end %>
      <% end %>
      <% if policy(@external_order_template).edit? %>
        <%= link_to edit_external_orders_templates_applicant_path(@external_order_template), :"data-turbolinks" => false,
          class: "btn btn-warning mr-2" do %>
          <%= fa_icon "pen" %>
          Editar
        <% end %>
      <% end %>
      <% if policy(@external_order_template).edit_provider? %>
        <%= link_to edit_provider_external_order_template_path(@external_order_template), :"data-turbolinks" => false,
          class: "btn btn-warning mr-2" do %>
          <%= fa_icon "pen" %>
          Editar
        <% end %>
      <% end %>
      <% if policy(@external_order_template).use_applicant? %>
        <%= link_to new_external_orders_applicant_path(template: @external_order_template), class: "btn btn-primary", target: :_blank do %>
          <%= fa_icon "plus" %>
          Crear solicitud
        <% end %>
      <% end %>
      <% if policy(@external_order_template).use_provider? %>
        <%= link_to new_provider_external_orders_path(template: @external_order_template), class: "btn btn-primary", target: :_blank do %>
          <%= fa_icon "plus" %>
          Crear despacho
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<% content_for :modal do %>
  <% if policy(@external_order_template).destroy? %>
    <%= render(partial: 'shared/modals/delete_confirmation') %>
  <% end %>
<% end %>