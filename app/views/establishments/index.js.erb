<% content_for :footer_extra_info do %>
  <%= link_to establishments_path(format: 'xlsx'),
          class: "btn btn-success", target: :_blank,
          title: 'Descargar a excel', data: { toggle: 'tooltip', placement: 'top' } do %>
    <%= fa_icon "file-excel" %>
    Excel
  <% end %>

<% end %>
<% list = escape_javascript(
  render(partial: 'establishments/partials/list', locals: { establishments: @establishments })
) %>
<% paginate = escape_javascript( 
  render( partial: 'shared/paginate_index',
          locals: { model: @establishments, form_id: 'establishments-filter' }
        )
) %>

$("#table_results").html("<%= list %>");
$("#paginate_footer").html("<%= paginate %>");
$("a.page-link").on('click', (e) => {
$("#loader-container").css({'display': 'flex'});
})
$("#loader-container").css({'display': 'none'});
