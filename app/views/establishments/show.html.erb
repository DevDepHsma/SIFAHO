<%= render 'external_orders/header' %>

<div class="card fixed-custom-card">
  <div class="card-header d-flex align-items-center justify-content-between">
    <div class="d-flex align-items-center">
      <%= fa_icon "eye" %>
      <h5 class="card-title mb-0 ml-2">
        Viendo establecimiento <%= @establishment.name %>
      </h5>
    </div>
    <%= link_to establishments_path, class: 'btn btn-light' do %>
      <%= fa_icon 'times' %>
    <% end %>
  </div>

  <div class="card-body">
    <div class="row">
      <div class="col-3">
        <% if @establishment.image.attached? %>
          <%= image_tag @establishment.image.variant(resize: "x500", gravity: "center"), class:"img-thumbnail" %>
        <% else %>
          <%= image_tag('hospital-solid.svg', width: '180px', class: 'text-light') %>
        <% end %>
      </div>
      <div class="col-9">
        <div class="mb-4">
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><span class="font-weight-bold">Code:</span><%= @establishment.code %></li>
            <li class="list-group-item"><span class="font-weight-bold">CUIE:</span><%= @establishment.cuie %></li>
            <li class="list-group-item"><span class="font-weight-bold">Email:</span><%= @establishment.email %></li>
            <li class="list-group-item"><span class="font-weight-bold">Teléfono:</span> <%= @establishment.phone %></li>
            <li class="list-group-item"><span class="font-weight-bold">Domicilio:</span> <%= @establishment.domicile %> </li>
            <li class="list-group-item"><span class="font-weight-bold">Cuit:</span> <%= @establishment.cuit %> </li>
            <li class="list-group-item"><span class="font-weight-bold">Código:</span> <%= @establishment.code %> </li>
            <li class="list-group-item"><span class="font-weight-bold">SIISA:</span> <%= @establishment.siisa %> </li>
          </ul>
        </div>
      </div>
    </div>
    <%# sectores de un establecimiento %>
    <div class="row h-row-custom">
      <div class="col-4 mh-col-custom">
        <%= render 'shared/sectors_table', sectors: @establishment.sectors, title: 'Sectores' %>
      </div>
      <div class="col-8 mh-col-custom">
        <%= render 'shared/users_table', users: @establishment.users.to_set %>
      </div>
    </div>
  </div>

  <div class="card-footer d-flex justify-content-end">
    <%= link_to :back, class: "btn btn-light mr-2" do %>
      Volver
    <% end %>
    <% if policy(@establishment).edit? %>
      <%= link_to edit_establishment_path(@establishment), :"data-turbolinks" => false, class: "btn btn-warning" do %>
        <%= fa_icon "pen" %>
        Editar
      <% end %>
    <% end %>
  </div>
</div>
