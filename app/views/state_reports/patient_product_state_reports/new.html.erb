<%= render 'state_reports/header' %>

<% content_for :container do %>-fluid<% end %>

<div class="row">
  <div class="col-12">
    <div class="card fixed-custom-card">
      <div class="card-header bg-primary text-white d-flex justify-content-between">
        <div class="d-flex align-items-center ml-2">
          <%= fa_icon "plus" %>
          <h5 class="card-title mb-0 ml-2">
            Nuevo reporte de producto entregado por paciente entre dos fechas
          </h5>
        </div>
        <%= link_to :back, class: "btn text-white" do %>
          <%= fa_icon "times" %>
        <% end %>   
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-7 border-right">
            <%=  simple_form_for @patient_product_state_report, url: 'crear', method: :post, html: {id: "report-form"} do |f| %>
              <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
              <%= f.error_notification message: f.object.errors[:patient_product_state_report].to_sentence if f.object.errors[:patient_product_state_report].present? %>
              <div class="row nested-fields">
                <div class="col-6">
                  <%= f.input :since_date, as: :string, label: "Desde", html5: true, required: true,
                    :input_html => {
                      id: "since_date",
                      required: true,
                      class: "form-control datepicker",
                      autocomplete: "off",
                      value: f.object.since_date.present? ? f.object.since_date.strftime("%d/%m/%Y") : '',
                    }
                  %>
                </div>
                <div class="col-6">
                  <%= f.input :to_date, as: :string, label: "Hasta", html5: true, required: true,
                    :input_html => {
                      id: "to_date",
                      required: true,
                      class: "form-control datepicker",
                      autocomplete: "off",
                      value: f.object.to_date.present? ? f.object.to_date.strftime("%d/%m/%Y") : '',
                    }
                  %>
                </div>
                <!-- Código de producto -->
                <div class="custom-input-group col-3">
                  <%= f.input :product, as: :string,
                    placeholder: 'Código',
                    label: 'Código',
                    required: true,
                    :input_html => {
                      class: "report-product-code select-change input-sm",
                      data: { autocomplete_source: search_by_code_products_path },
                      size: 4,
                      autocomplete: 'off',
                      value: "#{if f.object.product.present?; f.object.product_code; end }"
                    }
                  %>
                  <div class="with-loading">
                    <%= fa_icon 'spinner', class: "fa-spin"%>
                  </div>
                </div>

                <!-- Nombre de producto  -->
                <div class="custom-input-group col-9">
                  <%= f.input :product, as: :string,
                    label: 'Producto',
                    placeholder: 'Nombre',
                    required: true,
                    :input_html => {
                      class: "report-product-name select-change input-sm",
                      data: { autocomplete_source: search_by_name_products_path },
                      size: 35,
                      value: "#{if f.object.product.present?; f.object.product_name; end }"
                    } 
                  %>
                  <div class="with-loading">
                    <%= fa_icon 'spinner', class: "fa-spin"%>
                  </div>
                  <%= f.input :product_id, as: :hidden, input_html: { class: 'report-product-id' } %>
                </div>
              </div>
            <% end %>
          </div>
          <div class="col-5">
            <h5>Últimos reportes generados</h5>
            <table class="table">
              <thead>
                <tr>
                  <th>Producto</th>
                  <th>Desde</th>
                  <th>Hasta</th>
                  <th></th>
                </tr>
              </thead>
              <tbody id="last-reports">
                <% @last_reports.each do |report|%>
                  <tr>
                    <td><%= report.product_name %></td>
                    <td><%= report.since_date.strftime("%d/%m/%Y") %></td>
                    <td><%= report.to_date.strftime("%d/%m/%Y") %></td>
                    <td>
                      <%= link_to state_reports_patient_product_state_report_path(report), class: 'btn btn-light btn-sm',
                        title: 'Ver reporte', data: { toggle: 'tooltip', placement: 'top'}, 
                        'data-disable-with' => "<i class='fa fa-spinner fa-spin'></i>".html_safe do %>
                        <%= fa_icon "eye" %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <div class="text-center" id="load-more-btn">
              <%= link_to load_more_state_reports_patient_product_state_reports_path(offset: @last_reports.count), 
                remote: true, class: 'btn btn-light' do %>
                Mostrar más
              <% end %>
            </div>
          </div>
        </div>
      </div> 
      <div class="card-footer text-right">
        <%= link_to :back, class: "btn btn-light mr-2" do %>
          Volver
        <% end %>
        <button type='submit' name='commit' class='btn btn-success' form='report-form'>
          <%= fa_icon "check" %> Generar
        </button>
      </div>
    </div>
  </div>
</div>