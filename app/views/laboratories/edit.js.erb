// Add the dialog title
$('#dialog .modal-header').addClass('bg-warning');
$('#dialog .modal-title').html("<i class='fa fa-edit'></i>  Editando laboratorio");

// Render the edit form
$('#dialog .modal-body').html('<%= j render("form") %>');

// Add form button
$('#dialog .modal-footer').html(
  "<button type='button' class='btn' data-dismiss='modal'>Volver</button>"+
  "<button type='submit' class='btn btn-success' form='edit_laboratory_<%=@laboratory.id%>' value='Guardar cambios'><i class='fa fa-save'></i> Guardar cambios</button>"
);

// Show the dynamic dialog
$('#dialog').modal("show");

// Set focus to the first element
$('#dialog').on('shown.bs.modal', function () {
  $('.first_input').focus();
});

<%= render 'form_function' %>

// Remove style
$('#dialog').on('hidden.bs.modal', function () {
  $('#dialog .modal-header').removeClass('bg-warning');
});
