<tr id="user_<%= user.id %>">
  <td>
    <% if user.profile.present? %>
      <span><%= image_tag user_avatar(user, 25), size: '25', class: "rounded" %></span>
    <% end %>
  </td>
  <td><%= 
  
  highlight(user.username, 
                  get_value_from_filter(:dni), 
                  highlighter: '<mark class="highlight-1">\1</mark>'
                  ) %>
  </td>
  <% if user.profile.present? %>
    <td><%= 
    
     user.profile.last_name.present? ? highlight(user.profile.last_name, 
                  get_value_from_filter(:fullname), 
                  highlighter: '<mark class="highlight-1">\1</mark>',
                  ignore_special_chars: true): '----' %>
    </td>
    <td><%= 
    
     user.profile.first_name.present? ? highlight(user.profile.first_name, 
                  get_value_from_filter(:fullname), 
                  highlighter: '<mark class="highlight-1">\1</mark>',
                  ignore_special_chars: true): '----' %>
    </td>
    <td><%= user.profile.email.present? ? user.profile.email : '----' %></td>
  <% else %>
    <td>Sin perfil</td>
    <td>s/p</td>
    <td>s/p</td>
  <% end %>
  <td>
    <span class="badge badge-<%= user.active? ? 'success' : 'danger' %>">
      <%= t("user_status.#{user.status}") %>
    </span>
  </td>
  <td><%= user.sectors.count %></td>
  <td><%= user.last_sign_in_at.present? ? user.last_sign_in_at.strftime("%d/%m/%Y") : '---' %> </td>
  <td class="text-left actions-col">
    <% if policy(user).show? %>
      <%= link_to users_admin_path(user), class: 'btn btn-secondary btn-sm btn-detail', 
        title: 'Ver detalles', data: { toggle: 'tooltip', placement: 'top', detail: 'view' } do %>
        <%= fa_icon "eye" %>
      <% end %>
    <% end %>
    <% if policy(:user).edit_permissions? %>
      <%= link_to edit_permissions_users_admin_path(user), class: 'btn btn-warning btn-sm btn-permission-edit', 
        title: 'Editar permisos', data: { toggle: 'tooltip', placement: 'top', permissions: 'view' } do %>
        <%= fa_icon "lock" %>
      <% end %>
    <% end %>
  </td>
</tr>
