<% content_for :title, "Stock" %>

<% content_for :page_header do %>
  <li class="nav-item">
    <%= link_to stocks_path, class: "nav-link #{active_action_and_controller('index', 'stocks')}" do %>
      <%= fa_icon "cubes" %>
      Stock
    <% end %>
  </li>
  
  <li class="nav-item">
    <%= link_to lot_stocks_path, class: "nav-link #{active_action_and_controller('index', 'lot_stocks')}" do %>
      <%= fa_icon "barcode" %>
      Lotes
    <% end %>
  </li>
  <li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#">
      <%= fa_icon "angle-double-up" %>
      Cargar stock
      <span class="caret"></span>
    </a>
    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdown-submenu-link">
      <%# if policy(ExternalOrder).new_receipt? %>
        <%#= link_to new_receipt_external_orders_path, class: "dropdown-item" do %>
          <%#= fa_icon "plus" %>
          <!--Cargar por recibo-->
        <%# end %>
      <%# end %>
      <% if policy(:internal_order_applicant).new? %>
        <%= link_to new_internal_orders_applicant_path, class: "dropdown-item" do %>
          <%= fa_icon "plus" %>
          Solicitar a sector
        <% end %>
      <% end %>
      <% if policy(:external_order_applicant).new? %>
        <%= link_to new_external_orders_applicant_path, class: "dropdown-item" do %>
          <%= fa_icon "plus" %>
          Solicitar a establecimiento
        <% end %>
      <% end %>
      <%= link_to new_receipt_path, class: "dropdown-item" do %>
        <%= fa_icon "receipt" %>
        Cargar por recibo
      <% end %>
    </div>
  </li>

  <% if policy(Receipt).index? %>
    <li class="nav-item non-sel">
      <%= link_to receipts_path, class: "nav-link #{ active_action_and_controller(['index', 'show'], 'receipts') }" do %>
        <%= fa_icon "receipt" %>
        Recibos
      <% end %>
    </li>
  <% end %>
  
  <% if policy(Receipt).new? %>
    <li class="nav-item non-sel">
      <%= link_to new_receipt_path, class: "nav-link #{ active_action_and_controller('new', 'receipts') }" do %>
        <%= fa_icon "receipt" %>
        Cargar por recibo
      <% end %>
    </li>
  <% end %>
<% end %>