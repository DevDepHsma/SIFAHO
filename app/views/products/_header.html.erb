<% content_for :title, "Productos" %>

<% content_for :page_header do %>
  <li class="nav-item <%= active_action('index') %> non-sel">
    <%= link_to products_path, class: "nav-link #{ active_action('index') }" do %>
      <%= fa_icon "pills" %>
      Productos
    <% end %>
  </li>
  <% if policy(Product).new? %>
    <li class="nav-item <%= active_action('new') %> non-sel">
      <%= link_to new_product_path, class: "nav-link #{ active_action('new') }" do %>
        <%= fa_icon "plus" %>
        Agregar producto
      <% end %>
    </li>
  <% end %>
<% end %>