// Style modal
$('.modal-header').addClass('bg-danger text-white');

// Add the dialog title
$('#dialog h5').html("<i class='fa fa-trash'></i>  Eliminar concepto");

// Render the edit form
$('.modal-body').html('Esta seguro que desea eliminar el concepto: <p><%= @snomed_concept.term %>?</p>');

// Add form button
$('.modal-footer').html(
  "<button type='button' class='btn btn-default pull-left' data-dismiss='modal'>Volver</button>"+
  "<a data-remote='true' data-method='delete' href='<%= snomed_concept_path(@snomed_concept) %>' data-dismiss='modal' class='btn commit btn-danger pull-right' rel='nofollow'>Confirmar</a>"
);

// Show the dynamic dialog
$('#dialog').modal("show");

// Remove style
$('#dialog').on('hidden.bs.modal', function () {
  $('.modal-header').removeClass('bg-danger text-white');
});
