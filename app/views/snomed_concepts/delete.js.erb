// Add the dialog title
$('#dialog h4').html("<i class=' glyphicon glyphicon-trash'></i>  Borrando insumo");

// Render the edit form
$('#dialog .modal-body').html('Esta seguro que desea eliminar el insumo <%= @supply.name %>?');

// Add form button
$('#dialog .modal-footer').html(
  "<button type='button' class='btn btn-default pull-left' data-dismiss='modal'>Volver</button>"+
  "<a data-remote='true' data-method='delete' href='/supplies/<%= @supply.id %>>' data-dismiss='modal' class='btn commit btn-danger pull-right' rel='nofollow'>Confirmar</a>"
);

// Show the dynamic dialog
$('#dialog').modal("show");
