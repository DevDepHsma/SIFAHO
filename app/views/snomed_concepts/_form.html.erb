
<div class="card fixed-custom-card">
  <div class="card-header <%= @snomed_concept.new_record? ? 'bg-primary text-white' : 'bg-warning' %> d-flex align-items-center justify-content-between">
    <div class="d-flex align-items-center ml-2">
      <%= fa_icon (@snomed_concept.new_record? ?  "plus" : "edit")%>
      <h5 class="card-title mb-0 ml-2">
        <%= @snomed_concept.new_record? ? "Agregar" : "Editando" %> concepto SNOMED
      </h5>
    </div>
    <%= link_to :back, class: @snomed_concept.new_record? ? 'btn text-white' : 'btn' do %>
      <%= fa_icon "times" %>
    <% end %>
  </div>
  <div class="card-body">
    <%= simple_form_for @snomed_concept, html: { role: 'check-modified'} do |f| %>
      <%= f.error_notification %>
      <div class="row">
        <div class="col-6">
          <%= f.input :search_concept, as: :fake, label: 'Buscar concepto', 
            input_html: { placeholder: 'Ingrese un concepto', class: 'search-concept' } %>
        </div>
        <div class="col-6 border-left">
          <h5>Concepto a agregar</h5>
          <%= f.input :concept_id, label: 'Código', input_html: { readOnly: true, placeholder: "Ej: 1234" } %>
          <%= f.input :term, label: 'Concepto', input_html: { readOnly: true, placeholder: 'Ej: CITRATO DE CLOMIFENO Comp. 50 mg' } %>
          <%= f.input :fsn, label: 'Descripción', input_html: { readOnly: true, placeholder: "Una descripción" } %>
          <%= f.input :semantic_tag, label: 'Categoría', input_html: { readOnly: true, placeholder: "Ej: Fármaco de uso clínico" } %>
        </div>
      </div>
    <% end %>

  </div>

  <div class="card-footer d-flex justify-content-end">
    <%= link_to 'Volver', products_path, class: 'btn mr-2' %>
    <button type='submit' name='commit' class='btn btn-success' form="<%= @snomed_concept.new_record? ? 'new_product' : 'edit_product_' + @snomed_concept.id.to_s %>">
      <%= fa_icon 'save' %> Guardar
    </button>
  </div>
</div>
