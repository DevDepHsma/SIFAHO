<tr id="snomed_concept_<%= snomed_concept.id %>">
  <td><%= snomed_concept.concept_id %></td>
  <td><%= snomed_concept.term %></td>
  <td><%= snomed_concept.products_count %></td>
  <td class="text-left actions-col">
    <% if policy(snomed_concept).show? %>
      <%= link_to snomed_concept_path(snomed_concept), class: 'btn btn-secondary btn-sm',
        title: 'Ver detalles', data: { toggle: 'tooltip', placement: 'top' } do %>
        <%= fa_icon "eye" %>
      <% end %>
    <% end %>
    <% if policy(snomed_concept).delete? %>
      <%= link_to delete_snomed_concept_path(snomed_concept), remote: true,
        class: 'btn btn-danger btn-sm', title: 'Borrar', data: { toggle: 'tooltip', placement: 'top' } do %>
        <%= fa_icon "trash" %>
      <% end %>
    <% end %>
  </td>
</tr>
