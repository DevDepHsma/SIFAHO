
<div class="modal-dialog">
  <div class="modal-content panel-warning">
    <div class="modal-header panel-heading bg-warning">
      <h5 class="m-0 d-flex align-items-center">
        <%= fa_icon "undo" %> 
        <div class="ml-2 title">
          Retornar remito <%= @purchase.remit_code %> a <%= Purchase.statuses.key(@purchase.status_before_type_cast - 1).humanize %>
        </div>
      </h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">      
      <p>
        Est√° seguro de que desea retornar?
      </p>            
    </div>
    <div class="modal-footer text-right">
      <a href="#" data-dismiss="modal" class="btn btn-light">Cancelar</a>
      <%= link_to return_to_audit_purchase_path(@purchase), method: :patch,
        class: 'btn btn-warning',
        data: { 
          "disable-with": "Retornando...<i class='fa fa-spinner fa-spin'></i>"
        } do %>
        Continuar
      <% end %>

    </div>
  </div>
</div>