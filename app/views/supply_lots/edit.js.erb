// Add form button
$('#dialog .modal-footer').html(
  "<button type='button' class='btn btn-default pull-left' data-dismiss='modal'>Volver</button>"+
  "<button type='submit' class='btn btn-primary pull-right' form='edit_supply_lot_<%=@new_supply_lot.id%>' value='Guardar cambios'>Guardar cambios</button>"
