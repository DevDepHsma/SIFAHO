<tr class="nested-fields">
    <!-- Código del producto -->
    <td>
      <div class="custom-input-group">
        <%= f.input :supply_id, as: :string,
          placeholder: 'Código',
          label: false,
          :input_html => {
            class: "receipt-supply-code select-change input-sm",
            data: { autocomplete_source: search_by_id_supplies_path },
            size: 5,
            autocomplete: 'off'
          }
        %>
        <div class="with-loading">
          <%= fa_icon 'spinner', class: "fa-spin"%>
        </div>
      </div>
    </td>

    <!-- Nombre del producto -->
    <td>
      <div class="custom-input-group">
        <%= f.input :supply_id, as: :fake, id: "nom_ins",
          label: false,
          placeholder: 'Nombre',
          :input_html => {
            class: "receipt-supply-name select-change input-sm",
            data: { autocomplete_source: search_by_name_supplies_path },
            size: 45,
            value: "#{ if f.object.supply.present?; f.object.supply.name; end }",
            autocomplete: 'off'
          }
        %>
        <div class="with-loading">
          <%= fa_icon 'spinner', class: "fa-spin"%>
        </div>
      </div>
    </td>

    <!-- Unidad del producto -->
    <td>
      <%= f.input :supply_unity, as: :fake, label: false, disabled: true, required: false,
        input_html: {
          class: 'receipt-unity input-sm',
          size: 10,
          placeholder: "Unidad",
          value: "#{
            if f.object.supply.present?
              f.object.supply.unity
            end
          }"
        }
      %>
    </td>

    <!-- Cantidad a cargar -->
    <td>
      <%= f.input :quantity, placeholder: 'Cant', required: false,
        label: false, :input_html => { class: 'receipt-quantity input-sm', min: '0', :style => 'width: 100px' }
      %>
    </td>

    <!-- Lote -->
    <td>
      <div class="custom-input-group">
        <%= f.input :lot_code, as: :string,
          placeholder: 'Código',
          label: false,
          required: false,
          :input_html => {
            "data-tooltip" => true,
            :title => "",
            class: "receipt-supply-lot-code has-tip input-sm",
            data: { autocomplete_source: search_by_lot_code_supply_lots_path },
            size: 11,
            autocomplete: 'off',
            "data-supply-code" => "#{f.object.supply.present? ? f.object.supply.id : ""}",
            value: "#{if f.object.lot_code.present?; f.object.lot_code; end }",
          }
        %>
        <div class="with-loading">
          <%= fa_icon 'spinner', class: "fa-spin"%>
        </div>
      </div>
    </td>

    <!-- Laboratorio -->
    <td>
      <div class="custom-input-group">
        <div class="form-group fake optional receipt_receipt_products_laboratory_id_fake">
          <input type="text" 
          name="laboratory_id_fake" 
          id="laboratory_id_fake" 
          value="<%= f.object.laboratory.present? ? f.object.laboratory.name : '' %>"
          class="form-control fake optional receipt-laboratory-name input-sm <%= ("is-invalid" if f.object.errors[:laboratory_id].any? ) %> <%= ("is-valid" if f.object.laboratory_id.present? && !f.object.errors[:laboratory_id].any? ) %>" 
          data-autocomplete-source="<%= search_by_name_laboratories_path %>"
          size="35" 
          autocomplete="off" 
          placeholder="Razón social">
          <div id="laboratory_id_fake" class="invalid-feedback">
            Laboratorio <%= f.object.errors[:laboratory_id].first %>
          </div>
        </div>
        
        <div class="with-loading">
          <%= fa_icon 'spinner', class: "fa-spin"%>
        </div>
      </div>

      <%= f.input :laboratory_id, :as => :hidden, :error => false, :input_html =>  { class: "receipt-laboratory-id" },
        value: "#{ if f.object.laboratory_id.present?; f.object.laboratory_id; end }" %>
    </td>

    <!-- Vencimiento -->
    <td>
      <%= f.input :expiry_date_fake, 
        as: :tempus_dominus, 
        label: false,
        input_html: {
          placeholder: "MM/AA",
          required: false,
          autocomplete: 'off',
          value: "#{
            if f.object.expiry_date.present?
              f.object.expiry_date.strftime("%m/%y")
            else
              'n/a'
            end
          }"
        },
        html5: false
      %>
      <%= f.input :expiry_date, :as => :hidden, 
      :input_html =>  { class: "receipt-expiry-date" }, 
      value: "#{ if f.object.expiry_date.present?; f.object.expiry_date.strftime("%m/%y"); end }"%>
    </td>

  <!-- Botón quitar -->
  <td>
    <%= link_to_remove_association  f, class: 'remove-tag btn btn-warning',
      title: 'Quitar', data: { toggle: 'tooltip', placement: 'top' } do %>
      <%= fa_icon "minus" %>
    <% end %>
  </td>
</tr>
