
<%= simple_form_for(@inpatient_movement) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :bed_id, label: 'Cama',
      collection: @beds.map {|bed|  [bed.name, bed.id ]},
      :input_html => {
        required: true,
        include_blank: false,
        class: 'selectpicker custom-select-pick',
        "data-width"=>"100%",
        "data-size"=>"10",
        "title"=>"Seleccionar cama",
        "data-live-search"=>true,
        "data-none-results-text" => "No se encontró el habitación"
      }
    %>
    <%= f.association :movement_type %>
    <%= f.association :user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
