<p>Seleccione uno de los siguientes m√©dicos:</p>
<ul class="list-group list-group-hovered practitioner-list">
  <% @professionals.each do |item| %>
    <li class="list-group-item p-2 d-flex align-items-center justify-content-between">
      <span><%= item[:fullname] %> | <%= item[:dni] %> | MP <%= item[:qualifications_attributes][0][:code] %></span>
      <% if is_remote %>
        <%= link_to professionals_path(professional: item), method: :POST, remote: true, class: "btn btn-sm btn-success", data: { toggle: "tooltip", placement: "left" },
          title: "Seleccionar" do %>
          <%= fa_icon "check" %>
        <% end %>
      <% else %>
        <%= link_to professionals_path(professional: item), method: :POST, remote: false, class: "btn btn-sm btn-success", data: { toggle: "tooltip", placement: "left" },
          title: "Seleccionar" do %>
          <%= fa_icon "check" %>
        <% end %>
      <% end %>
    </li>
  <% end %>
</ul>