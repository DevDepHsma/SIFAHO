<div class="form-group integer optional permission_request_sector_id">
  <label class="form-control-label integer optional" for="permission_request_sector_id">¿A cuál sector pertenece?</label>
  <select class="selectpicker custom-select-pick" 
          data-width="100%" 
          data-size="10"
          title="Seleccionar sector"
          data-live-search="true"
          data-none-results-text="No se encontró el sector"
          name="permission_request[sector_id]"
          id="permission_request_sector_id"
          tabindex="-98">
    <% @sectors.each do |sector| %>
      <option value="<%= sector.id %>"><%= sector.name%></option>
    <% end %>
    <option value="-1">Otro...</option>
  </select>
</div>

<div id="sector-input"></div>