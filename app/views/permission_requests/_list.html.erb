<div id="filterrific_results">
  <div class="card">
    <table class="table table-hover table-striped table-sm">
      <thead class="thead-light">
        <tr>
          <th>Usuario</th>
          <th>Estado</th>
          <th><%= filterrific_sorting_link(@filterrific, :establecimiento) %></th>
          <th><%= filterrific_sorting_link(@filterrific, :sector) %></th>
          <th><%= filterrific_sorting_link(@filterrific, :fecha) %></th>
          <%# <th class="text-center">Acciones</th> %>
        </tr>
      </thead>
      
      <tbody id="permission_requests">
        <%= render @permission_requests %>
      </tbody>
    </table>
  </div>
  <div class="d-flex align-items-center justify-content-center" style="height: 50px">
    <%= will_paginate @permission_requests, list_classes: %w(pagination mb-0), 
      previous_label: '<i class="fa fa-angle-left"></i>',
      next_label: '<i class="fa fa-angle-right"></i>', 
      renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
  </div>
</div>

