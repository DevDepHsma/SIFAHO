image.src = "<%= @patient.avatar.attached? ? url_for(@patient.avatar) : asset_path('profile-placeholder.jpg') %>"
$(image).addClass("patient-avatar");
$("#patient-avatar").html(image);

setPatientSex('<%= @patient.sex %>');
getPrescriptionsTo(<%= @patient.id %>);
