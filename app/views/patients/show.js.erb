// Add the dialog title
$('#dialog h4').html("<i class='glyphicon glyphicon-eye-open'></i>  Viendo paciente");

// Render the edit form
$('#dialog .modal-body').html('<%= j render("show") %>');

// Add form button
$('#dialog .modal-footer').html(
  "<button type='button' class='btn btn-default pull-left' data-dismiss='modal'>Volver</button>"+
  "<% if policy(@patient).edit? %>"+
  '<%= link_to edit_patient_path(@patient), remote: true, class: "btn btn-warning btn-md" do %>'+
    '<%= content_tag(:span, "", class: "glyphicon glyphicon-edit") %>'+
    ' Editar paciente'+
  '<% end %>'+
  "<% end %>"
);

// Show the dynamic dialog
$('#dialog').modal("show");
