// Style modal
$('#dialog .modal-header').addClass('bg-primary text-white');

// Add the dialog title
$('#dialog .modal-title').html("<i class='fa fa-plus'></i>  Nuevo paciente");

// Render the new form
$('#dialog .modal-body').html('<%= j render("form_remote") %>');

// Add form button
$('#dialog .modal-footer').html(
  "<button type='button' class='btn' data-dismiss='modal'>Volver</button>"+
  "<button type='submit' class='btn btn-success pull-right' form='new_patient'><i class='fa fa-check'></i> Cargar paciente</button>"
);

// Show the dynamic dialog
$('#dialog').modal("show");

// Set focus to the first element
$('#dialog').on('shown.bs.modal', function () {
  $('#patient_last_name').focus();
});

<%= render 'form_function' %>

// Remove style
$('#dialog').on('hidden.bs.modal', function () {
  $('#dialog .modal-header').removeClass('bg-primary text-white');
});
