<%= render 'shared/flash_message' %>

<% if (policy(:external_order_applicant).edit?(@order) || policy(:internal_order_applicant).edit?(@order)) && policy(@order_product).edit_product? %>
  <% js = escape_javascript(
    render "shared/orders/applicant/fields", order: @order, order_product: @order_product
  ) %>
<% elsif (policy(:external_order_provider).edit?(@order) || policy(:internal_order_provider).edit?(@order)) && policy(@order_product).edit_product? %>
  <% js = escape_javascript(
    render "shared/orders/provider/fields", order: @order, order_product: @order_product
  ) %>
<% end %>

<% if @order_product.errors.any? %>
  $('#ord-prod-<%= @form_id %>').replaceWith("<%= js %>");
  $("#loading").css({"opacity": 1});
  setTimeout(function(){
    $("#loading").hide();
  }, 300);
<% else %>
  $("#order-products-container").append("<%= js %>");
<% end %>

initProductsEvents();