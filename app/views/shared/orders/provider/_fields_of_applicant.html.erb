
<div class="col-1 pl-1 pr-1">
  <div class="form-group">
    <input type="text" 
            name="product-code-no-editable" 
            value="<%= object.product_code %>"
            class="form-control form-control-sm"
            disabled>
  </div>
</div>

<!-- Nombre de Producto -->
<div class="col pl-1 pr-1">
  <div class="form-group">
    <input type="text" 
            name="product-name-no-editable"
            value="<%= object.product_name %>"
            class="form-control form-control-sm"
            disabled>
  </div>
</div>
      
<!-- Unidad -->
<div class="col-1 pl-1 pr-1">
  <div class="form-group">
    <input class="form-control form-control-sm"
            type="text"
            disabled
            name="product-unity-no-editable"
            value="<%= object.product_unity_name %>">
  </div>
</div>

<!-- Stock -->
<div class="col-1 pl-1 pr-1">
  <div class="form-group">
    <input class="form-control form-control-sm" 
            type="number"
            disabled
            name="stock-no-editable"
            value="<%= current_user.sector.stock_to(object.product) %>">
  </div>
</div>
  
<!-- Cantidad solicitada -->
<div class="col-1 pl-1 pr-1">
  <div class="form-group">
    <input class="form-control form-control-sm" 
            value="<%= object.request_quantity %>"
            type="number"
            disabled
            name="product-request-quantity-no-editable">
  </div>
</div>
