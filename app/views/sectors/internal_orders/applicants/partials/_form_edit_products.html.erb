<div class="card fixed-custom-card">
  <div class="card-header <%= order.new_record? ? 'bg-primary text-white' : 'bg-warning' %> d-flex align-items-center justify-content-between">
    <div class="d-flex align-items-center ml-2">
      <%= fa_icon "edit" %>
      <h5 class="card-title mb-0 ml-2">
        Editando productos <%= order.order_type %> de sector c√≥digo <%= order.remit_code %>
      </h5>
    </div>
    <%= link_to :back, class: order.new_record? ? 'btn text-white' : 'btn' do %>
      <%= fa_icon "times" %>
    <% end %>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-4">
        <%# SECTOR SOLICITANTE %>
        Sector solicitante
        <%= order.applicant_sector.name %>
      </div>
      <div class='col-md-4'>
        <%# SECTOR PROVEEDOR %>
        Sector proveedor
        <%= order.provider_sector.name %>
      </div>
      <div class='col-md-4'>
        Observaciones
        <%= order.observation %>
      </div>
    </div>
    
    <%# INSUMOS SOLICITADOS %>
    <%= render "shared/orders/applicant/table", order: order, order_product: order_product %>

    <input name="commit" id="submit-type" type="hidden">
  </div>

  <div class="card-footer d-flex justify-content-end">
    <%= link_to 'Volver', external_orders_applicants_path, class: 'btn btn-light mr-2' %>
  
    <button type='submit' class='btn btn-success mr-2' form="<%= order.new_record? ? 'new_external_order' : 'edit_external_order_' + order.id.to_s %>" data-value='audit'>
      
      <div class="c-msg" style="pointer-events: none;">
        <%= fa_icon "save" %> Guardar 
      </div>
      
      <div class="d-none" style="pointer-events: none;">
        <%= fa_icon "spinner", class: "fa-spin send-audit" %>
        Guardando...
      </div>

    </button>
  </div>
</div>
