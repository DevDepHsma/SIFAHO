<%= simple_form_for internal_orders_xpath, remote: true, html: { method: 'GET', class: 'custom-filters-v1', id: "internal-filter" } do |f| %>
  <div class="filter-form-row">
    <div class="filter-form-col">
      <div class="form-group">
        <input class="form-control" 
               autocomplete="off" 
               type="text" 
               name="filter[code]" 
               id="filter_code" 
               placeholder="Código"
               value="<%= get_value_from_filter(:code) %>">
        <label>Código</label>
      </div>
    </div>
    <div class="filter-form-col">
      <div class="form-group">
        <%= yield(:field_filters) %>
      </div>
    </div>
    <div class="filter-form-col">
      <div class="form-group">
        <div class="filter-form-col">
          <div class="form-group">
            <%= select_tag :status,options_for_select(InternalOrder.order_types),include_blank:true,id:'filter_with_order_type',name:'filter[with_order_type]',class:'form-control custom-select',onchange:"mark_selected(event)" %>
            <label>Origen</label>
          </div>
        </div>
      </div>
    </div>
    <div class="filter-form-col">
      <div class="form-group">
        <div class="filter-form-col">
          <div class="form-group">
            <%= select_tag :status,options_for_select(InternalOrder.statuses),include_blank:true,id:'filter_with_status',name:'filter[with_status]',class:'form-control custom-select',onchange:"mark_selected(event)" %>
            <label>Estado</label>
          </div>
        </div>
      </div>
    </div>
    <input type="hidden" name="filter[sort]" value="<%= get_value_from_filter(:sort) %>">
    <input type="hidden" name="per_page" value="<%= params[:per_page] || 15 %>">
    <div class="filter-form-btn-group">
      <button class="btn btn-primary" type="submit" form="<%= "internal-filter" %>">
        Buscar
      </button>
      <button class="btn btn-danger btn-clean-filters" type="button" form="<%= "internal-filter" %>">
        <%= fa_icon 'times' %>
      </button>
    </div>
  </div>
<% end%>
